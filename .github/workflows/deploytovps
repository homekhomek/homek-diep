name: Deploy to VPS

on:
  push:
    branches: [ "main" ]

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Deploy to VPS
        uses: appleboy/ssh-action@master
        with:
          host: ${{ secrets.HOST }}
          username: ${{ secrets.USERNAME }}
          key: ${{ secrets.SSH_KEY }}
          script: |
            # 1. Go to the project folder (CHANGE THIS PATH!)
            cd /home/ubuntu/homek-diep

            # 2. Pull the latest changes
            git pull origin main

            # 3. Install new dependencies
            npm install

            # 4. Restart the server
            pm2 restart all
